<PlannerScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 10

        MDTopAppBar:
            id: header
            #title: "Planer na dzień:"
            elevation: 4
            anchor_title: "center"


        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            padding: dp(10)

            MDRaisedButton:
                text: "Dzień"
                size_hint_x: 1

            MDRaisedButton:
                text: "Tydzień"
                size_hint_x: 1

            MDRaisedButton:
                text: "Miesiąc"
                size_hint_x: 1



        ScrollView:
            MDList:
                id: task_list

    MDFloatingActionButton:
        icon: "plus"
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"right": 0.95, "bottom": 0.05}
        on_release: app.add_task()