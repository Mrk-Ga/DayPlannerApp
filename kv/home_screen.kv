<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 10

        MDTopAppBar:
            id: header
            elevation: 47
            anchor_title: "center"


        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            padding: dp(10)

            MDRaisedButton:
                text: "Dzisiaj"
                size_hint_x: 1
                on_release: root.open_today_tasks()

            MDRaisedButton:
                text: "Kalendarz"
                id: month_button
                size_hint_x: 1
                on_release: root.open_month_calendar()

        ScrollView:
            MDList:
                id: task_list

    MDFloatingActionButton:
        icon: "plus"
        md_bg_color: (0,0,1,1)
        pos_hint: {"right": 0.95, "bottom": 0.05}
        on_release: root.open_add_task_dialog()