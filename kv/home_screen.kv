<HomeScreen>:
    md_bg_color: (0.8, 0.8, 0.9, 0.9)
    MDFloatLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: 1
            spacing: 10
            padding: 20

            MDTopAppBar:
                id: header
                md_bg_color: (0.8, 0.8, 0.9, 0.9)
                anchor_title: "center"

                MDTopAppBarTitle:
                    id: headerTitle
                    text: ""

                MDTopAppBarTrailingButtonContainer:
                    MDActionTopAppBarButton:
                        icon: "arrow-left"
                        on_release:
                            root.change_date(-1)
                    MDActionTopAppBarButton:
                        icon: "arrow-right"
                        on_release:
                            root.change_date(1)



            MDBoxLayout:
                orientation: "horizontal"
                size_hint_y: None
                height: dp(50)
                spacing: dp(10)
                padding: dp(10)


                MDBoxLayout:
                    size_hint_x: 0.5
                    Widget:
                    MDButton:
                        style: "filled"
                        size_hint_x: 0.5
                        on_release: root.open_today_tasks()
                        MDButtonText:
                            text: "Dzisiaj"

                MDBoxLayout:
                    size_hint_x: 0.5

                    MDButton:
                        style: "tonal"
                        size_hint_x: 0.5
                        on_release: root.open_month_calendar()
                        MDButtonText:
                            text: "Kalendarz"

            ScrollView:
                MDList:
                    id: task_list

        MDFabButton:
            icon: "plus"
            md_bg_color: (0,0,1,1)
            pos_hint: {"right": 0.95, "bottom": 0.15}
            on_release: root.open_add_task_dialog()