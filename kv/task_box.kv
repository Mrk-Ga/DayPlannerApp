<TaskBox>:
    id: task_box
    orientation: "vertical"
    padding: 10
    size_hint_y: None
    height: dp(100)

    MDBoxLayout:
        orientation: "horizontal"
        MDLabel:
            id: task_label
            text: "Domy≈õlny tekst"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": 0.5}
            on_release: root.remove_task()

        MDIconButton:
            icon: "calendar-sync"
            pos_hint: {"center_y": 0.5}
            on_release: root.change_task_date()

        MDIconButton:
            icon: "arrow-right"
            pos_hint: {"center_y": 0.5}
            text_color: 0,0,0,1
            on_release: root.change_date_to_next_day()

    MDSlider:
        id: task_slider
        min: 0
        max: 100
        step: 5
        value: 0

        on_value: root.check_slider_value(self.value)

        MDSliderHandle:
        MDSliderValueLabel: