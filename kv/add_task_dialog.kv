<AddTaskContent>:
    id: task_content
    orientation: "horizontal"
    spacing: "10dp"
    padding: "10dp"
    MDTextField:
        id: task_input
        hint_text: "dodaj zadanie"
        mode: "filled"

    MDButton:
        style: "filled"
        pos_hint: {"center_x": 0.5}
        on_release: root.parentDialog.add_weekly_task()
        MDButtonText:
            text: "Dodaj\ncyklicznie"

<AddTaskDialogUI@MDDialog>:
    type: "custom"
    auto_dismiss: False

    MDDialogHeadlineText:
        text: "Dodaj zadanie"
        halign: "left"

    MDDialogContentContainer:
        padding: [0,dp(20),0,0]
        AddTaskContent:
            id: task_content

    MDDialogButtonContainer:
        MDButton:
            on_release: task_content.parentDialog.close()
            MDButtonText:
                text: "Powr√≥t"
        MDButton:
            on_release: task_content.parentDialog.add_task()
            MDButtonText:
                text: "Dodaj"
